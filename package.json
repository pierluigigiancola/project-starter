{
	"name": "root",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.9.0",
	"scripts": {
		"cleanNodeModules": "pnpm -r exec rm -rf node_modules",
		"clean": "pnpm --filter \"./packages/**\" run clean",
		"preinstall": "node -e \"if(process.env.CI == 'true') {console.log('Skipping preinstall...')} else {process.exit(1)}\" || npx -y only-allow pnpm",
		"test": "pnpm run test:ci",
		"test:pr": "nx affected --targets=test:eslint,test:sherif,test:unit,test:e2e,test:types,test:build,build",
		"test:ci": "nx run-many --targets=test:eslint,test:sherif,test:unit,test:e2e,test:types,test:build,build",
		"test:eslint": "nx affected --target=test:eslint",
		"test:sherif": "sherif",
		"test:unit": "nx affected --target=test:unit",
		"test:unit:dev": "pnpm run test:unit && nx watch --all -- pnpm run test:unit",
		"test:e2e": "nx run-many --target=test:e2e",
		"test:build": "nx affected --target=test:build",
		"test:types": "nx affected --target=test:types",
		"test:format": "pnpm run biome --check",
		"build": "nx affected --target=build",
		"build:all": "nx run-many --target=build",
		"watch": "pnpm run build:all && nx watch --all -- pnpm run build:all",
		"dev": "pnpm run watch",
		"biome": "biome check --files-ignore-unknown .",
		"biome:write": "pnpm run biome --write",
		"changeset": "changeset",
		"changeset:version": "changeset version && pnpm install --no-frozen-lockfile && pnpm biome:write",
		"changeset:publish": "changeset publish"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "catalog:",
		"@biomejs/biome": "catalog:",
		"@changesets/cli": "catalog:",
		"@svitejs/changesets-changelog-github-compact": "catalog:",
		"@tanstack/config": "catalog:",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"jsdom": "catalog:",
		"knip": "catalog:",
		"nx": "catalog:",
		"publint": "catalog:",
		"sherif": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vitest": "catalog:"
	}
}
